<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wsk.dao.OperationMapper" >
    <resultMap id="BaseResultMap" type="com.wsk.pojo.Operation" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="uid" property="uid" jdbcType="INTEGER" />
        <result column="sid" property="sid" jdbcType="INTEGER" />
        <result column="count" property="count" jdbcType="INTEGER" />
        <result column="type" property="type" jdbcType="VARCHAR" />
    </resultMap>

    <insert id="insertRecord" parameterType="com.wsk.pojo.Operation" >
        insert into operation (uid, sid, count, type)
        values (#{uid,jdbcType=INTEGER}, #{sid,jdbcType=INTEGER}, #{count,jdbcType=INTEGER}, #{type,jdbcType=VARCHAR})
    </insert>

    <update id="updateRecord" parameterType="com.wsk.pojo.Operation" >
        update operation
        <set>
            <if test="count != null" >
                count = #{count,jdbcType=INTEGER},
            </if>
        </set>
        where uid = #{uid,jdbcType=INTEGER}
        and sid = #{sid,jdbcType=INTEGER}
    </update>

    <select id="selectRecord" resultMap="BaseResultMap" parameterType="com.wsk.pojo.Operation">
        select id, uid, sid, count, type
        from operation
        <where>
<!--            <if test="id != null">-->
<!--                and id = #{id}-->
<!--            </if>-->
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="sid != null">
                and sid = #{sid}
            </if>
        </where>

    </select>

</mapper>