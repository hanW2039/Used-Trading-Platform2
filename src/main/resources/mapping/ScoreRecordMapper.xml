<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wsk.dao.ScoreRecordMapper" >
    <resultMap id="BaseResultMap" type="com.wsk.pojo.ScoreRecord" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="uid" property="uid" jdbcType="INTEGER" />
        <result column="sid" property="sid" jdbcType="INTEGER" />
        <result column="score" property="score" jdbcType="DOUBLE" />
    </resultMap>

    <insert id="insertScoreRecord" parameterType="com.wsk.pojo.ScoreRecord" >
        insert into scorerecord (uid, sid, score)
        values (#{uid,jdbcType=INTEGER}, #{sid,jdbcType=INTEGER}, #{score,jdbcType=DOUBLE})
    </insert>

    <update id="updadteScoreRecord" parameterType="com.wsk.pojo.ScoreRecord" >
        update scorerecord
        <set>
            <if test="score != null" >
                score = #{score},
            </if>
        </set>
        where uid = #{uid,jdbcType=INTEGER}
        and sid = #{sid,jdbcType=INTEGER}
    </update>

    <select id="selectScoreRecords" resultMap="BaseResultMap" parameterType="com.wsk.pojo.ScoreRecord">
        select id, uid, sid, score
        from scorerecord
        <where>
            <!--            <if test="id != null">-->
            <!--                and id = #{id}-->
            <!--            </if>-->
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="sid != null">
                and sid = #{sid}
            </if>
        </where>
    </select>

</mapper>